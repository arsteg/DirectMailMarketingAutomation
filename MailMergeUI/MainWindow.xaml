<Window x:Class="MailMergeUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mail Merge UI Prototype"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Toolbar Button -->
        <Style TargetType="Button" x:Key="ToolbarButton">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#3AADA1"/>
            <Setter Property="BorderBrush" Value="#3AADA1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Margin" Value="5,5,5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E6F6F4"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CDEEE9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Green Button -->
        <Style TargetType="Button" x:Key="PrimaryButton" BasedOn="{StaticResource ToolbarButton}">
            <Setter Property="Background" Value="#3AB19B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3AB19B"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4DC5AD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#379C88"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Grid Split: Left controls+log | Right preview -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210"/>
            <!-- Left panel fixed -->
            <ColumnDefinition Width="*"/>
            <!-- Right panel expands -->
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <Grid Grid.Column="0" Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Controls -->
                <RowDefinition Height="*"/>
                <!-- Logs (take remaining space) -->
            </Grid.RowDefinitions>

            <!-- Controls Area -->
            <Border Grid.Row="0"
                    Background="White" 
                    BorderBrush="#DDD" BorderThickness="1" 
                    CornerRadius="10" Padding="12" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Mail Merge Controls" 
                               FontWeight="Bold" FontSize="16" 
                               Foreground="#3AADA1" Margin="0,0,0,10"/>

                    <TextBlock Text="Type:" FontWeight="SemiBold" Foreground="#3AADA1" Margin="0,0,0,4"/>
                    <ComboBox x:Name="cmbEngines" Width="150" Margin="0,0,0,10" Background="White" Foreground="#3AADA1" BorderBrush="#3AADA1" BorderThickness="1">
                        <ComboBoxItem Content="AddressRight" IsSelected="True"/>
                        <ComboBoxItem Content="Riso FT"/>
                    </ComboBox>

                    <Separator Margin="0,12"/>

                    <Button Content="📄 Load Template" Style="{StaticResource ToolbarButton}" Click="btnLoadTemplate_Click"/>
                    <Button Content="📑 Load CSV" Style="{StaticResource ToolbarButton}" Click="btnLoadCsv_Click"/>
                    <Button Content="👁 Preview" Style="{StaticResource ToolbarButton}" Click="btnPreview_Click"/>
                    <Button Content="💾 Export" Style="{StaticResource ToolbarButton}" Click="btnExport_Click"/>

                    <Separator Margin="0,12"/>

                    <TextBlock Text="Printer" FontWeight="SemiBold" Foreground="#3AADA1" Margin="0,0,0,4"/>
                    <ComboBox Name="cmbPrinters" Width="150" Margin="0,0,0,10"
                              Background="White" Foreground="#3AADA1"
                              BorderBrush="#3AADA1" BorderThickness="1"/>
                    <Button Content="🖨 Print" Style="{StaticResource PrimaryButton}" Click="btnPrint_Click"/>
                </StackPanel>
            </Border>

            <!-- Log / Status Area -->
            <Border Grid.Row="1" CornerRadius="10" BorderBrush="#DDD" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="*"/>
                        <!-- Log content -->
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#3AB19B" CornerRadius="10,10,0,0" Padding="6">
                        <TextBlock Text="Activity Log" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <!-- Content -->
                    <Border Grid.Row="1" Background="White" CornerRadius="0,0,10,10" Padding="6">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox Name="txtStatus" 
                                     Background="Transparent" 
                                     Foreground="#333" 
                                     BorderThickness="0" 
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap"
                                     Text="Ready..."
                                     FontFamily="Consolas" 
                                     IsReadOnly="True"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Right Preview -->
        <Border Grid.Column="1" Margin="20" CornerRadius="12"
                Background="White" BorderBrush="#DDD" BorderThickness="1"
                SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Image Name="imgPreview" Stretch="Uniform" Margin="12"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
