<Window x:Class="MailMergeUI.Dialogs.ReasonInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailMergeUI.Dialogs"
        mc:Ignorable="d"
        Title="ReasonInputDialog" Height="450" Width="800">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Why are you blacklisting this property?" 
                   Grid.Row="0" Margin="0,0,0,8" FontWeight="SemiBold"/>

        <TextBox x:Name="txtReason" Grid.Row="1" 
                 AcceptsReturn="False" VerticalContentAlignment="Top"/>

        <StackPanel Grid.Row="2" HorizontalAlignment="Right" 
                    Orientation="Horizontal" Margin="0,12,0,0">
            <Button Content="OK" Width="70" IsDefault="True" 
                    Click="Ok_Click" Margin="0,0,6,0"/>
            <Button Content="Cancel" Width="70" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
