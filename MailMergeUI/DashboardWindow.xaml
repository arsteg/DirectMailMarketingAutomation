<Window x:Class="MailMergeUI.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundLight}"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStyle="None">

    <Grid>
        
        
        
        <!-- Define layout: Sidebar (250px) + MainContent (*) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Grid Background="{StaticResource PrimaryGradient}">
            <StackPanel VerticalAlignment="Top" Margin="20">
                <TextBlock Text="Dashboard" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           Margin="0,0,0,30"/>

                <!-- Button to open MainWindow -->
                <Button Content="Mail Merge" 
                       Height="40" Margin="0,0,0,10"
                        Foreground="White" Background="Transparent"
                        BorderBrush="Transparent" HorizontalContentAlignment="Left"
                        FontSize="16" Cursor="Hand"
                        Click="OpenMainWindow_Click"/>
                
                <Button Content="Settings" Height="40"
                        Foreground="White" Background="Transparent"
                        BorderBrush="Transparent" HorizontalContentAlignment="Left"
                        FontSize="16" Cursor="Hand" Click="OpenSettings_Click"/>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom" Margin="20">

                <Button Content="🚪 Logout" Name="btnLogout" Height="40"
            Foreground="White" Background="Transparent"
            BorderBrush="Transparent" HorizontalContentAlignment="Left"
            FontSize="16" Cursor="Hand" Click="btnLogout_Click"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Column="1" Background="{StaticResource BackgroundLight}">

            <Border Background="{StaticResource CardBackgroundLight}" 
                    CornerRadius="12" 
                    Margin="30" 
                    Padding="20"
                    BorderBrush="{StaticResource DividerColor}" 
                    BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" 
                                      ShadowDepth="4" 
                                      Opacity="0.25" 
                                      Direction="270"/>
                </Border.Effect>

                <StackPanel>
                    <TextBlock Text="Welcome to Dashboard"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextDark}"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="Select an option from the left menu to continue."
                               FontSize="16"
                               Foreground="{StaticResource TextLight}"/>
                </StackPanel>
            </Border>

            <!-- Close Button -->
            <Button Content="✕" 
        Width="30" Height="30" 
        Background="Transparent"
        Foreground="{DynamicResource TextLight}"
        BorderThickness="0"
        HorizontalAlignment="Right" 
        VerticalAlignment="Top"
        Margin="-2"
        FontSize="12"
        Click="CloseButton_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                    Background="{TemplateBinding Background}"
                    CornerRadius="15"
                    Width="30" Height="30">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#10000000"/>
                                <Setter Property="Foreground" Value="{DynamicResource TextDark}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
