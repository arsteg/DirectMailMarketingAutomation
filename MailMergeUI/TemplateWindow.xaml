<Window x:Class="MailMergeUI.TemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#F5F9FF"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow"
        FontFamily="Segoe UI"
        AllowsTransparency="False"
        xmlns:local="clr-namespace:MailMergeUI">

    <Grid Name="TemplateGrid" MouseDown="TemplateGrid_MouseDown">

      

        <!-- Main Layout -->
        <Grid Margin="0,25,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar (same style as MainWindow) -->
            <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundLight}" 
                    Padding="16,8,16,8" 
                    BorderBrush="{DynamicResource DividerColor}" 
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock Text="Template Creator" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryBlue}" 
                               VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnBack" Content="⬅ Back" 
                                Style="{StaticResource LogoutButton}" 
                                Click="btnBack_Click"
                                Margin="0,0,12,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <local:PdfTemplateCreator Grid.Row="1"></local:PdfTemplateCreator>
        </Grid>
    </Grid>
</Window>
