<UserControl x:Class="MailMergeUI.PdfTemplateCreator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1400"
             Background="#FAFAFA"
             SnapsToDevicePixels="True">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="Primary" Color="#1976D2"/>
        <SolidColorBrush x:Key="PrimaryDark" Color="#1565C0"/>
        <SolidColorBrush x:Key="Accent" Color="#FF4081"/>
        <SolidColorBrush x:Key="Gray1" Color="#F5F5F5"/>
        <SolidColorBrush x:Key="Gray2" Color="#EEEEEE"/>
        <SolidColorBrush x:Key="Gray3" Color="#CCCCCC"/>
        <SolidColorBrush x:Key="Text" Color="#212121"/>
        <SolidColorBrush x:Key="TextLight" Color="#757575"/>
        <SolidColorBrush x:Key="BorderBrushLight" Color="#DDDDDD"/>

        <!-- Modern Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource Primary}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PrimaryDark}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Separator -->
        <Style x:Key="VerticalSeparator" TargetType="Rectangle">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Fill" Value="{StaticResource Gray3}"/>
            <Setter Property="Margin" Value="8,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar (Ribbon Style) -->
        <!-- Top Toolbar - Professional Icons -->
        <Border Grid.Row="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

                <!-- New Template -->
                <Button Style="{StaticResource IconButtonStyle}" ToolTip="New Template (Ctrl+N)" Click="NewTemplate_Click">
                    <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Width="18" Height="18"/>
                </Button>

                <!-- Load Word Document -->
                <Button Style="{StaticResource IconButtonStyle}" ToolTip="Load Word Document" Click="LoadWord_Click">
                    <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Width="16" Height="16"/>
                </Button>

                <Rectangle Style="{StaticResource VerticalSeparator}"/>

                <!-- Add Text -->
                <Button Style="{StaticResource IconButtonStyle}" ToolTip="Add Text (T)" Click="AddTextBlock_Click">
                    <TextBlock Text="T" FontFamily="Segoe UI" FontSize="18" FontWeight="Bold"/>
                </Button>

                <!-- Add Image -->
                <Button Style="{StaticResource IconButtonStyle}" ToolTip="Add Image" Click="AddImage_Click">
                    <Path Data="M8.5,13.5L11,16L14.5,12L19,18H5M21,19V5C21,3.89 20.1,3 19,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Width="18" Height="18"/>
                </Button>

                <!-- Form Field -->
                <ComboBox x:Name="FormFieldComboBox" Width="170" Margin="8,0" 
                  SelectedIndex="0" SelectionChanged="FormFieldComboBox_SelectionChanged"
                  ToolTip="Insert Merge Field"/>

                <!-- Date Field -->
                <ComboBox x:Name="DateFieldComboBox" Width="150" Margin="8,0" 
                  SelectedIndex="0" SelectionChanged="DateFieldComboBox_SelectionChanged"
                  ToolTip="Insert Date"/>

                <Rectangle Style="{StaticResource VerticalSeparator}"/>

                <!-- Bring to Front -->
                <Button Style="{StaticResource IconButtonStyle}" ToolTip="Bring to Front (Ctrl+Shift+])" Click="BringForward_Click">
                    <Path Data="M3,3H21V7H19V5H5V19H19V17H21V21H3V3M21,9V15H19V9H21M21,17V19H19V17H21Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Width="16" Height="16"/>
                </Button>

                <!-- Send to Back -->
                <Button Style="{StaticResource IconButtonStyle}" ToolTip="Send to Back (Ctrl+Shift+[)" Click="SendBackward_Click">
                    <Path Data="M3,3H21V21H3V3M5,5V19H19V5H5M7,7H17V9H7V7M7,11H17V13H7V11M7,15H14V17H7V15Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Width="16" Height="16"/>
                </Button>

                <!-- Delete -->
                <Button x:Name="DeleteButton" Style="{StaticResource IconButtonStyle}" ToolTip="Delete (Del)" Click="Delete_Click" IsEnabled="False">
                    <Path Data="M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19M8.46,11.88L9.87,10.47L12,12.59L14.12,10.47L15.53,11.88L13.41,14L15.53,16.12L14.12,17.53L12,15.41L9.88,17.53L8.47,16.12L10.59,14L8.46,11.88M15.5,4L14.5,3H9.5L8.5,4H5V6H19V4H15.5Z" 
                  Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                  Width="18" Height="18"/>
                </Button>

                <Rectangle Style="{StaticResource VerticalSeparator}"/>

                <!-- Template Name & Export -->
                <TextBlock Text="Name:" VerticalAlignment="Center" Margin="20,0,8,0" FontWeight="SemiBold"/>
                <TextBox x:Name="TemplateNameTextBox" Width="200" Text="My Template" 
                 TextChanged="TemplateNameTextBox_TextChanged" 
                 ToolTip="Template Name"/>

                <Button x:Name="ExportButton" Content=" Export to PDF" Margin="16,0" Padding="16,10" 
                Background="#1976D2" Foreground="White" FontWeight="SemiBold" FontSize="14"
                Click="ExportPdf_Click" IsEnabled="True">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z" 
                              Fill="White" Width="14" Height="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Export to PDF"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Designer Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Layers Panel -->
            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="0,0,1,0">
                <StackPanel Margin="12">
                    <TextBlock Text="Layers" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                    <ListBox x:Name="LayersListBox" Height="500" SelectionChanged="LayersListBox_SelectionChanged"/>
                    <Button Content="Reverse Order" Margin="0,8,0,0" Click="ReverseLayers_Click"/>
                </StackPanel>
            </Border>

            <!-- Canvas -->
            <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Border Background="White" 
                        Width="794" 
                        Height="1123" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Top" 
                        Margin="40"
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1"
                        CornerRadius="8">
                    <Border.Effect>
                        <DropShadowEffect Color="#888888" ShadowDepth="4" BlurRadius="15" Opacity="0.3"/>
                    </Border.Effect>
                    <Canvas x:Name="TemplateCanvas" 
                            Width="794" 
                            Height="1123"                          
                            MouseLeftButtonDown="TemplateCanvas_MouseLeftButtonDown"
                            PreviewMouseLeftButtonDown="TemplateCanvas_PreviewMouseLeftButtonDown"
                            PreviewMouseMove="TemplateCanvas_PreviewMouseMove"
                            PreviewMouseLeftButtonUp="TemplateCanvas_PreviewMouseLeftButtonUp">
                        <Canvas.Background>
                            <ImageBrush x:Name="PdfBackgroundBrush" Stretch="Uniform"/>
                        </Canvas.Background>
                    </Canvas>
                </Border>
            </ScrollViewer>

            <!-- Properties Panel -->
            <Border Grid.Column="2" Background="White" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="1,0,0,0">
                <ScrollViewer>
                    <StackPanel x:Name="PropertiesPanel" Margin="16" Visibility="Collapsed">
                        <TextBlock Text="Element Properties" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,16"/>

                        <TextBlock Text="Font Family"/>
                        <ComboBox x:Name="FontComboBox" Margin="0,4,0,12"/>

                        <TextBlock Text="Font Size"/>
                        <ComboBox x:Name="FontSizeComboBox" Margin="0,4,0,12"/>

                        <TextBlock Text="Opacity"/>
                        <Slider x:Name="OpacitySlider" Minimum="0.1" Maximum="1" Value="1" Margin="0,4,0,16"/>

                        <TextBlock Text="Position X"/>
                        <TextBox x:Name="PosXBox" Margin="0,4,0,8"/>

                        <TextBlock Text="Position Y"/>
                        <TextBox x:Name="PosYBox" Margin="0,4,0,16"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource Gray2}" Padding="12" BorderBrush="{StaticResource BorderBrushLight}" BorderThickness="0,1,0,0">
            <DockPanel>
                <TextBlock x:Name="PageNumberText" Text="Page 1 of 1" FontWeight="Medium"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="←" Width="36" Height="36" Margin="4,0" Click="PrevPage_Click" x:Name="PrevPage" IsEnabled="False"/>
                    <Button Content="→" Width="36" Height="36" Margin="4,0" Click="NextPage_Click" x:Name="NextPage" IsEnabled="False"/>
                    <Button Content="Back to Editor" Margin="20,0" Click="BackButton_Click" Visibility="Collapsed" x:Name="BackButton"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- CSV Preview WebView -->
        <wv2:WebView2 x:Name="PdfWebView" Grid.Row="1" Grid.ColumnSpan="3" Visibility="Collapsed"/>
    </Grid>
</UserControl>