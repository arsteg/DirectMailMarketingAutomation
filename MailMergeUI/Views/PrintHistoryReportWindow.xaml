<Window x:Class="MailMergeUI.Views.PrintHistoryReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Print History Report"
        Height="860" Width="1280"
        Background="#FF0F111A"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI">

    <Border Margin="40" CornerRadius="24">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF12151D" Offset="0"/>
                <GradientStop Color="#FF1A1E2C" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Header + Filters + Total -->
                <RowDefinition Height="*"/>
                <!-- DataGrid -->
                <RowDefinition Height="Auto"/>
                <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- ====================== SINGLE COMPACT HEADER BAR ====================== -->
            <Border Grid.Row="0"
        Background="#1D202E"
        BorderBrush="#2E3448"
        BorderThickness="1"
        CornerRadius="20"
        Padding="20,14"
        Margin="0,0,0,24">

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Title -->
                        <ColumnDefinition Width="20"/>
                        <!-- Spacing -->
                        <ColumnDefinition Width="*"/>
                        <!-- Filters -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Total -->
                        <ColumnDefinition Width="12"/>
                        <!-- Spacing -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Refresh -->
                    </Grid.ColumnDefinitions>

                    <!-- Title -->
                    <TextBlock Text="Print History"
                   FontSize="30"
                   FontWeight="SemiBold"
                   Foreground="#E4E8FF"
                   VerticalAlignment="Center"
                   Grid.Column="0"/>

                    <!-- FILTERS -->
                    <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"                    
                    Grid.Column="2">

                        <!-- From -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="From"
                           Foreground="#ADB5D9"
                           FontSize="15"
                           VerticalAlignment="Center"/>

                            <DatePicker x:Name="dpFromDate"
                            Width="170" Height="42"
                            FontSize="15"
                            Background="#252A41"
                            Foreground="Black"
                            BorderBrush="#3A4160"
                            BorderThickness="2"
                            Padding="8,0">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </StackPanel>

                        <!-- To -->
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="To"
                           Foreground="#ADB5D9"
                           FontSize="15"
                           VerticalAlignment="Center"/>

                            <DatePicker x:Name="dpToDate"
                            Width="170" Height="42"
                            FontSize="15"
                            Background="#252A41"
                            Foreground="Black"
                            BorderBrush="#3A4160"
                            BorderThickness="2"
                            Padding="8,0">
                                <DatePicker.Resources>
                                    <Style TargetType="DatePickerTextBox">
                                        <Setter Property="Foreground" Value="White"/>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </StackPanel>

                        <!-- Apply Filter -->
                        <Button Content="Apply"
                    Width="130" Height="44"
                    Click="BtnApplyFilter_Click"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Background="#00D4A1"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border CornerRadius="14"
                                            Background="{TemplateBinding Background}">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#00E8B8"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <!-- TOTAL -->
                    <Border Grid.Column="3"
                CornerRadius="14"
                Padding="16,8">

                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#6C5CE7" Offset="0"/>
                                <GradientStop Color="#A55CFF" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <StackPanel>
                            <TextBlock Text="Total Printed"
                           Foreground="White"
                           FontSize="12"
                           Margin="0,0,0,2"/>

                            <TextBlock x:Name="lblTotal"
                           Text="0"
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Refresh -->
                    <Button Content="Refresh"
                Grid.Column="5"
                Width="130" Height="44"
                Click="BtnRefresh_Click"
                FontSize="16"
                Background="#6C5CE7"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border CornerRadius="14"
                                        Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#7B6EFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                </Grid>
            </Border>


            <!-- ====================== DATAGRID ====================== -->
            <Border Grid.Row="1" Background="#FF1E2233" CornerRadius="24"
                    BorderBrush="#FF2D3250" BorderThickness="1" Margin="0,0,0,24">
                <DataGrid x:Name="dgPrintHistory"
                          AutoGenerateColumns="False" IsReadOnly="True"
                          Background="Transparent" RowHeight="72" FontSize="17"
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          CanUserSortColumns="True" BorderThickness="0">

                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF6C5CE7"/>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#FF3A4066"/>
                    </DataGrid.Resources>

                    <DataGrid.AlternatingRowBackground>
                        <SolidColorBrush Color="#0C1E2233"/>
                    </DataGrid.AlternatingRowBackground>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF252A41"/>
                            <Setter Property="Foreground" Value="#FFE4E8FF"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="FontSize" Value="18"/>
                            <Setter Property="Padding" Value="28,20"/>
                            <Setter Property="BorderThickness" Value="0,0,0,3"/>
                            <Setter Property="BorderBrush" Value="#FF6C5CE7"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="28,0"/>
                            <Setter Property="Foreground" Value="#FFE4E8FF"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF3A4066"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF2A2F4A"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Print Date"
                                            Binding="{Binding PrintDate, StringFormat='{}{0:dddd, MMMM dd, yyyy}'}"
                                            Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Medium"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="Letters Printed" Binding="{Binding Count}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="FontSize" Value="24"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#FF00E8B8"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Footer -->
            <TextBlock Grid.Row="2" x:Name="lblDateRange"
                       Foreground="#FF7881A1" FontSize="15" FontStyle="Italic"
                       HorizontalAlignment="Center" Margin="0,0,0,24"/>
        </Grid>
    </Border>
</Window>