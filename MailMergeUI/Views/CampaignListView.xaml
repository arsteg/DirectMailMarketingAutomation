<Window x:Class="MailMergeUI.Views.CampaignListView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        mc:Ignorable="d"
        Title="Campaigns"
        Width="900" Height="800"
        Background="{DynamicResource BackgroundLight}">

    <Border Background="{DynamicResource CardBackgroundLight}"
            Padding="30"
            CornerRadius="12"
            BorderBrush="{DynamicResource DividerColor}"
            BorderThickness="1"
            Margin="30">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource HeaderBackgroundLight}"
                    Padding="16,10"
                    BorderBrush="{DynamicResource DividerColor}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="8,8,0,0">
                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="btnBack"
                                Content="← Back"
                                Style="{StaticResource ToolbarButton}"
                                Click="btnBack_Click"
                                Padding="14,6"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Page Header -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,20,0,20" VerticalAlignment="Center">
                <TextBlock Text="Campaigns"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBlue}"
                           VerticalAlignment="Center"/>
                <Button Content="+ New Campaign"
                        Command="{Binding NewCommand}"
                        Style="{StaticResource PrimaryButton}"
                        Margin="20,0,0,0"
                        Padding="20,8"/>
            </StackPanel>

            <!-- Campaign List -->
            <Border Grid.Row="2"
                    Background="{DynamicResource CardBackgroundLight}"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource DividerColor}"
                    BorderThickness="1"
                    Padding="10">

                <DataGrid ItemsSource="{Binding Campaigns}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          HeadersVisibility="Column"
                          RowHeight="36"
                          GridLinesVisibility="None"
                          Background="{DynamicResource CardBackgroundLight}"
                          Foreground="{DynamicResource TextDark}"
                          BorderThickness="0"
                          Margin="0,5,0,0"
                          ColumnHeaderHeight="36"
                          FontSize="14">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="{DynamicResource HeaderBackgroundLight}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextDark}"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Height" Value="36"/>
                            <Setter Property="Padding" Value="8,0"/>
                        </Style>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                            <Setter Property="BorderBrush" Value="{DynamicResource DividerColor}"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Margin" Value="0,2"/>
                            <Setter Property="Padding" Value="6,0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="ToolTip" Value="Click Edit to modify this campaign"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F9FF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Stages" Binding="{Binding Stages.Count}" Width="80"/>
                        <DataGridTextColumn Header="Run At" Binding="{Binding LeadSource.RunAt}" Width="120"/>

                        <DataGridTemplateColumn Header="Actions" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Edit"
                                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ToolbarButton}"
                                                Padding="12,4"/>
                                        <Button Content="Delete"
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ToolbarButton}"
                                                Padding="12,4"
                                                Foreground="Red"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Pagination Controls -->
            <StackPanel Grid.Row="3"
            Orientation="Horizontal"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,15,0,0">

                <Button Content="⟨ Prev"
            Command="{Binding PrevPageCommand}"
            Style="{StaticResource ToolbarButton}"
            Padding="14,6"/>

                <TextBlock Text="{Binding PageInfoText}"
               FontSize="14"
               FontWeight="SemiBold"
               Foreground="{DynamicResource TextDark}"
               VerticalAlignment="Center"
               Margin="10,0"/>

                <Button Content="Next ⟩"
            Command="{Binding NextPageCommand}"
            Style="{StaticResource ToolbarButton}"
            Padding="14,6"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
