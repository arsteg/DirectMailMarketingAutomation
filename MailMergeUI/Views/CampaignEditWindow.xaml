<Window x:Class="MailMergeUI.Views.CampaignEditWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MailMergeUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <ScrollViewer>
            <StackPanel>
                <!-- Campaign Name -->
                <TextBlock Text="Campaign Name" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Campaign.Name}" Margin="0,0,0,15"/>

                <!-- A. Lead Source -->
                <TextBlock Text="A. Lead Source (API Search)" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="API URL:" Grid.Row="0" Grid.Column="0" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Campaign.LeadSource.ApiUrl}" Grid.Row="0" Grid.Column="1" Margin="10,0,0,5"/>

                    <TextBlock Text="API Key:" Grid.Row="1" Grid.Column="0" Margin="0,5,0,5"/>
                    <!--<PasswordBox x:Name="ApiKeyBox" Grid.Row="1" Grid.Column="1" Margin="10,5,0,5"
                                 PasswordChanged="ApiKeyBox_PasswordChanged"/>-->

                    <TextBlock Text="Filters (JSON):" Grid.Row="2" Grid.Column="0" Margin="0,5,0,5"/>
                    <TextBox Text="{Binding Campaign.LeadSource.FiltersJson}" Grid.Row="2" Grid.Column="1" Margin="10,5,0,5" Height="60" AcceptsReturn="True"/>

                    <TextBlock Text="Run Daily At:" Grid.Row="3" Grid.Column="0" Margin="0,5,0,5"/>
                    <TextBox Text="{Binding SelectedTime}" Grid.Row="3" Grid.Column="1" Margin="10,5,0,5" Width="80" HorizontalAlignment="Left"/>
                </Grid>

                <!-- B. Follow-Up Sequence -->
                <TextBlock Text="B. Follow-Up Sequence (Stages)" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                <ItemsControl ItemsSource="{Binding Stages}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Text="{Binding StageName}" Grid.Column="0" Margin="0,0,5,0"/>
                                <ComboBox ItemsSource="{Binding DataContext.AvailableTemplates, RelativeSource={RelativeSource AncestorType=Window}}"
                                          DisplayMemberPath="Name"
                                          SelectedValue="{Binding TemplateId}"
                                          SelectedValuePath="Id"
                                          Grid.Column="1" Margin="0,0,5,0"/>
                                <TextBox Text="{Binding DelayDays}" Grid.Column="2" Margin="0,0,5,0" Width="60" HorizontalAlignment="Left"/>
                                <Button Content="Remove" Command="{Binding DataContext.RemoveStageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}" Grid.Column="3" Background="#FFCCCC"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Add Stage" Command="{Binding AddStageCommand}" HorizontalAlignment="Left" Margin="0,10,0,20"/>

                <!-- Save / Cancel -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,30,0,0">
                    <Button Content="Save" Command="{Binding SaveCommand}" Padding="15,8" Margin="0,0,10,0"/>
                    <Button Content="Cancel" Command="{Binding CancelCommand}" Padding="15,8"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
