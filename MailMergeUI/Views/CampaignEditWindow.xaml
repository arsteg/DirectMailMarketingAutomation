<Window x:Class="MailMergeUI.Views.CampaignEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:converters="clr-namespace:MailMergeUI.Helpers"
        mc:Ignorable="d"
        Title="Edit Campaign"
        Width="900" MinHeight="900"
        Background="{DynamicResource BackgroundLight}"
        >
    <Window.Resources>
        <!-- Converters -->
        <converters:ScheduleTypeToVisibilityConverter x:Key="ScheduleTypeToVisibilityConverter"/>
        <converters:DayOfWeekInListConverter x:Key="DayOfWeekInListConverter"/>
        <converters:EnumToListConverter x:Key="EnumToListConverter" />
    </Window.Resources>
    <Border Background="{DynamicResource CardBackgroundLight}"
            Padding="30"
            CornerRadius="12"
            BorderBrush="{DynamicResource DividerColor}"
            BorderThickness="1"
            Margin="30"
            Effect="{DynamicResource ShadowEffect}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="Edit Campaign"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PrimaryBlue}"
                           Margin="0,0,0,25"/>
                <!-- Campaign Name -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Campaign Name"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextDark}"
                               Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Campaign.Name}"
                             Height="38"
                             Padding="8"
                             BorderBrush="{DynamicResource DividerColor}"
                             Background="{DynamicResource CardBackgroundLight}"
                             Foreground="{DynamicResource TextDark}"
                             BorderThickness="1"
                             FontSize="14"/>
                </StackPanel>
                <!-- Section: Lead Source -->
                <Border Background="{DynamicResource BackgroundLight}"
                        CornerRadius="10"
                        Padding="25"
                        BorderBrush="{DynamicResource DividerColor}"
                        BorderThickness="1"
                        Margin="0,10,0,0"
                        Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="A. Lead Source (API Search)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryBlue}"
                                   Margin="0,0,0,15"/>
                        <Separator Margin="0,0,0,20"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <!-- Filters JSON -->
                            <TextBlock Text="Filters (JSON):" Grid.Row="0" Grid.Column="0"
                                       VerticalAlignment="Top"
                                       Foreground="{DynamicResource TextDark}"
                                       Margin="0,8,0,0"/>
                            <TextBox Text="{Binding Campaign.LeadSource.FiltersJson}"
                                     Grid.Row="0" Grid.Column="1"
                                     Height="100"
                                     Padding="10"
                                     Margin="8,4"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     BorderBrush="{DynamicResource DividerColor}"
                                     FontFamily="Consolas"
                                     FontSize="13"
                                     VerticalScrollBarVisibility="Auto"/>
                            <!-- Schedule Type -->
                            <TextBlock Text="Schedule Type:" Grid.Row="1" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextDark}"/>
                            <ComboBox Grid.Row="1" Grid.Column="1"
                                      ItemsSource="{Binding ScheduleTypes}"
                                      SelectedItem="{Binding Campaign.LeadSource.Type, Mode=TwoWay}"
                                      Margin="8,4"
                                      MinWidth="200"
                                      Height="32" SelectionChanged="ComboBox_SelectionChanged">
                            </ComboBox>
                            <!-- Days of Week -->
                            <TextBlock x:Name="daysOfWeekLabel" Grid.Row="2" Grid.Column="0"
                                       Text="Days of Week:"
                                       VerticalAlignment="Top"
                                       Margin="0,10,0,0"
                                       Foreground="{DynamicResource TextDark}"/>
                            <ItemsControl x:Name="daysOfWeekItemControl" Grid.Row="2" Grid.Column="1"
                                          ItemsSource="{Binding DayCheckBoxes}"                                         >
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox Content="{Binding DisplayName}"
                                                  IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Margin="6,3"
                                                  FontSize="13"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                            <!-- Run At -->
                            <TextBlock Text="Run At:" Grid.Row="3" Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource TextDark}"/>
                            <ComboBox Grid.Row="3" Grid.Column="1"
          ItemsSource="{Binding TimesList}"
          DisplayMemberPath="Key"
          SelectedValuePath="Value"
          SelectedValue="{Binding SelectedTime, Mode=TwoWay}"
          IsEditable="True"
          IsTextSearchEnabled="True"
          Text="{Binding ComboBoxText, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
          MinWidth="200"
          Height="32"
          Padding="6"
          Margin="8,4"
          LostFocus="ComboBox_LostFocus"
          PreviewKeyDown="ComboBox_PreviewKeyDown"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SECTION B: Follow-Up Sequence (Stages) -->
                <Border Background="{DynamicResource BackgroundLight}"
                        CornerRadius="10"
                        Padding="25"
                        BorderBrush="{DynamicResource DividerColor}"
                        BorderThickness="1"
                        Margin="0,30,0,0"
                        Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="B. Follow-Up Sequence (Stages)"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource PrimaryBlue}"
                                   Margin="0,0,0,15"/>
                        <Separator Margin="0,0,0,20"/>
                        <TextBlock Text="Add one or more stages. Each stage sends a letter after the specified delay (0 for first stage)."
                                   Foreground="{DynamicResource TextDark}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <!-- Stages List -->
                        <ItemsControl ItemsSource="{Binding Stages}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource CardBackgroundLight}"
                                            CornerRadius="8"
                                            Padding="12"
                                            Margin="0,0,0,12"
                                            BorderBrush="{DynamicResource DividerColor}"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Stage Name -->
                                            <TextBlock Text="Stage Name:" Grid.Row="0" Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,0,8"/>
                                            <TextBox Text="{Binding StageName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Grid.Row="0" Grid.Column="1"
                                                     Height="32"
                                                     Padding="6"
                                                     Margin="6,0,0,8"/>

                                            <!-- Template -->
                                            <TextBlock Text="Template:" Grid.Row="1" Grid.Column="0"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,0,8"/>
                                            <ComboBox ItemsSource="{Binding DataContext.Templates, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      DisplayMemberPath="Name"
                                                      SelectedValuePath="Id"
                                                      SelectedValue="{Binding TemplateId, Mode=TwoWay}"
                                                      Grid.Row="1" Grid.Column="1"
                                                      Height="32"
                                                      Margin="6,0,0,8"/>

                                            <!-- Delay -->
                                            <TextBlock Text="Delay (days):" Grid.Row="2" Grid.Column="0"
                                                       VerticalAlignment="Center"/>
                                            <TextBox Text="{Binding DelayDays, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     Grid.Row="2" Grid.Column="1"
                                                     Width="60"
                                                     Height="32"
                                                     HorizontalAlignment="Left"
                                                     Margin="6,0,0,0"
                                                     PreviewTextInput="NumberValidationTextBox"/>

                                            <!-- Remove -->
                                            <Button Content="Remove"
                                                    Command="{Binding DataContext.RemoveStageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Grid.Row="0" Grid.RowSpan="3" Grid.Column="2"
                                                    Width="80"
                                                    Height="32"
                                                    Margin="15,0,0,0"
                                                    Style="{StaticResource ToolbarButton}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <!-- Add Stage -->
                        <Button Content="Add Stage"
                                Command="{Binding AddStageCommand}"
                                Style="{StaticResource PrimaryButton}"
                                Width="140"
                                Height="36"
                                HorizontalAlignment="Left"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Save / Cancel -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,40,0,10">
                    <Button Content="Save"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource PrimaryButton}"
                            Width="120"
                            Height="38"
                            FontWeight="SemiBold"
                            Margin="0,0,10,0"/>
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource ToolbarButton}"
                            Width="120"
                            Height="38"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>